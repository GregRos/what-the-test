{
  "name": "what-the-test",
  "version": "0.1.6",
  "description": "Detect the user's test framework and use it to register tests. Works with both ESM and CJS.",
  "keywords": [
    "unit",
    "test",
    "framework",
    "detect",
    "environment",
    "esm",
    "cjs"
  ],
  "homepage": "https://github.com/GregRos/what-the-test#readme",
  "repository": "github:GregRos/what-the-test",
  "license": "MIT",
  "author": "GregRos",
  "type": "module",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      },
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      }
    }
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "typings": "dist/esm/index",
  "files": [
    "README.md",
    "dist",
    "LICENSE.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc -b .",
    "clean": "shx rm -rf dist",
    "build:clean": "run-s clean build",
    "prepare": "husky install",
    "watch": "tsc -b . --watch",
    "lint:fix": "prettier --write src/**/*.{js,jsx,cjs,mjs,ts,tsx,cts,mts,ctsx,mtsx,html,htm,yaml,yml,json,scss,css} && eslint --fix src/**/*.{ts,mts,cts,js,mjs,cjs} ",
    "lint:check": "prettier --check src/**/*.{js,jsx,cjs,mjs,ts,tsx,cts,mts,ctsx,mtsx,html,htm,yaml,yml,json,scss,css} && eslint src/**/*.{ts,mts,cts,js,mjs,cjs}",
    "test": " node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "tidy": "yarn install && run-s build:clean lint:fix test",
    "prepublishOnly": "node tools/packaging.js"
  },
  "lint-staged": {
    "*.{ts,mts,cts,js,mjs,cjs}": "node_modules/.bin/eslint --cache --fix",
    "src/**/*.{js,jsx,cjs,mjs,ts,tsx,cts,mts,ctsx,mtsx,html,htm,yaml,yml,json,scss,css}": "node_modules/.bin/prettier --write"
  },
  "dependencies": {
    "semver-try-require": "^7.0.0"
  },
  "devDependencies": {
    "@gregros/eslint-config": "^0.6.0",
    "@swc/core": "^1.7.0",
    "@swc/jest": "^0.2.36",
    "@types/eslint": "^9",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.11",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "eslint": "^8",
    "husky": "^9.1.1",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "prettier-plugin-jsdoc": "^1.3.0",
    "prettier-plugin-organize-imports": "^4.0.0",
    "prettier-plugin-packagejson": "^2.5.1",
    "shx": "^0.3.4",
    "ts-jest": "^29.2.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  },
  "packageManager": "yarn@4.3.1"
}
