{
  "name": "which-test-framework",
  "exports": {
    ".": {
      "require": "./dist/lib/index.js",
      "import": "./dist/lib/index.js",
      "default": "./dist/lib/index.js",
      "types": "./dist/lib/index.d.ts"
    }
  },
  "typings": "dist/lib/index",
  "description": "Detects which test framework it's running in and which are available",
  "version": "0.1.0",
  "main": "dist/lib/index.js",
  "repository": "github:gregros/which-test-framework",
  "scripts": {
    "build": "tsc -b .",
    "clean": "shx rm -rf dist",
    "rebuild": "run-s clean build",
    "prepare": "husky install",
    "watch": "tsc -b . --watch",
    "lint:fix": "prettier --write src/**/*.{js,jsx,cjs,mjs,ts,tsx,cts,mts,ctsx,mtsx,html,htm,yaml,yml,json,scss,css} && eslint --fix src/**/*.{ts,mts,cts,js,mjs,cjs} ",
    "lint:check": "prettier --check src/**/*.{js,jsx,cjs,mjs,ts,tsx,cts,mts,ctsx,mtsx,html,htm,yaml,yml,json,scss,css} && eslint src/**/*.{ts,mts,cts,js,mjs,cjs}",
    "test": "jest --coverage"
  },
  "keywords": [
    "unit",
    "test",
    "framework",
    "detect",
    "environment",
    "esm",
    "cjs"
  ],
  "author": "GregRos",
  "license": "MIT",
  "lint-staged": {
    "*.{ts,mts,cts,js,mjs,cjs}": "node_modules/.bin/eslint --cache --fix",
    "src/**/*.{js,jsx,cjs,mjs,ts,tsx,cts,mts,ctsx,mtsx,html,htm,yaml,yml,json,scss,css}": "node_modules/.bin/prettier --write"
  },
  "packageManager": "yarn@4.3.1",
  "devDependencies": {
    "@gregros/eslint-config": "^0.6.0",
    "@swc/core": "^1.7.0",
    "@swc/jest": "^0.2.36",
    "@types/eslint": "^9",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.7",
    "@types/node": "^20.14.11",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "eslint": "^9.7.0",
    "husky": "^9.1.1",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.7",
    "lodash": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "prettier-plugin-jsdoc": "^1.3.0",
    "prettier-plugin-organize-imports": "^4.0.0",
    "prettier-plugin-packagejson": "^2.5.1",
    "shx": "^0.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  }
}
